 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AA000000"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="300dp"
            android:layout_height="80px"
            android:gravity="center|start"
            android:background="@android:color/white"
            android:drawableEnd="@color/colorPrimary"
            android:text="   프로필 변경                      "
            android:textColorHint="#000000"
            android:textColorLink="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!--이게 프로필 노란밑줄 보이는게 하는팁-->
        <View
            android:layout_width="300dp"
            android:layout_height="3dp"
            android:background="@android:color/darker_gray" />


        <Button
            android:id="@+id/btn_popCamera"
            android:layout_width="300dp"

            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center|start"
            android:text="      사진 촬영" />

        <Button
            android:id="@+id/btn_popGallery"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center|start"
            android:text="      앨범에서 사진 선택" />

        <Button

            android:id="@+id/btn_popPlusImg"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center|start"
            android:text="      확대해서 보기" />

        <Button

            android:id="@+id/btn_baseImg"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center|start"
            android:text="      기본이미지 " />




    </LinearLayout>


</LinearLayout>
